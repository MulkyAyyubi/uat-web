<script>
    const form = document.querySelector("form");
    const submitBtn = document.querySelector("#submit");
    const naming = document.querySelector("#sentence");

    submitBtn.addEventListener("click", (skibidi) => {
        if (form.checkValidity()) {
            skibidi.preventDefault();
            form.classList.toggle("hidden");
            naming.classList.toggle("hidden");
            naming.classList.toggle("flex");
        }
    })
</script>